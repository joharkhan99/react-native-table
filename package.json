{
  "name": "@joharkhan/react-native-table",
  "version": "1.0.0",
  "private": false,
  "description": "A highly customizable table component for React Native with support for custom cell rendering, filtering, sorting, pagination, and more.",
  "repository": {
    "type": "git",
    "url": "https://github.com/joharkhan99/react-native-table.git"
  },
  "keywords": [
    "react-native-table",
    "table-package",
    "expo-table-component"
  ],
  "author": "Johar Khan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joharkhan99/react-native-table/issues"
  },
  "homepage": "https://github.com/joharkhan99/react-native-table#readme",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint . --fix",
    "start": "react-native start",
    "test": "jest",
    "prepare": "husky",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "react": "18.3.1",
    "react-native": "0.76.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "15.0.1",
    "@react-native-community/cli-platform-android": "15.0.1",
    "@react-native-community/cli-platform-ios": "15.0.1",
    "@react-native/babel-preset": "0.76.5",
    "@react-native/eslint-config": "0.76.5",
    "@react-native/metro-config": "0.76.5",
    "@react-native/typescript-config": "0.76.5",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "husky": "^9.1.7",
    "jest": "^29.6.3",
    "lint-staged": "^15.3.0",
    "prettier": "^2.8.8",
    "react-test-renderer": "18.3.1",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
